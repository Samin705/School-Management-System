@{
    ViewBag.Title = "FinancialReport";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FinancialReport</title>
</head>
<body allign="center">
    <h1 style="text-align:center">School Management System</h1>
    <h2 style="text-align:center">Financial Report</h2>
    <h2 style="text-align:center">Monthly Expense Report</h2>
    <br />

    <table align="center" border="1" cellpadding="10" cellspacing="8" width="70%">

        <tr>
            <th style="text-align:center"><span style="font-size:20px">Category</span></th>
            <th style="text-align:center"><span style="font-size:20px">Value</span></th>
        </tr>

        <tr>
            <td style="text-align:center">Total Number of Students</td>
            <td style="text-align:center">
                @TempData["student_count"]
            </td>


        </tr>
        <tr>
            <td style="text-align:center">Student Fee Total</td>
            <td style="text-align:center">
                @TempData["studentfee_total"]
            </td>


        </tr>
        <tr>
            <td style="text-align:center">Total Number of Teacher</td>
            <td style="text-align:center">
                @TempData["teacher_count"]
            </td>


        </tr>
        <tr>
            <td style="text-align:center">Teacher Salary Total</td>
            <td style="text-align:center">
                @TempData["teachersalary_total"]
            </td>


        </tr>
        <tr>
            <td style="text-align: center"><b>Total Income</b></td>
            <td style="text-align: center">
                <b>@TempData["account_total"]</b>
            </td>
        </tr>

    </table>
    <br />
    <br />
    <a href="GeneratePDF" style="font-size:20px">Download Financial Report</a>
</body>
</html>



